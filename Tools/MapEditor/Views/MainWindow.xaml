<Window x:Class="MapEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
		xmlns:views="clr-namespace:MapEditor.Views"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="600" Width="1000" FontSize="15" WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="200"/>
		</Grid.ColumnDefinitions>
		<Rectangle Fill="Black" />
		<views:Game />
		<Grid Grid.Column="1">
			<Button Content="開く" Margin="5" Width="50" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left"/>
			<Button Content="保存" Margin="5" Width="50" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right"/>
			
			<TextBox HorizontalAlignment="Stretch" Height="23" Margin="50,38,10,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top"/>
			<Label Content="高さ" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top"/>
			
			<TextBox HorizontalAlignment="Stretch" Height="23" Margin="50,68,10,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top"/>
			<Label Content="幅" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top"/>

		</Grid>
	</Grid>
</Window>
